<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:minHeight="68dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewGasolina"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="16dp"
        android:text="@string/text_gasolina"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAlcool"
        app:layout_constraintTop_toBottomOf="@+id/editGasolina" />

    <TextView
        android:id="@+id/textViewMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/main_title"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <faranjit.currency.edittext.CurrencyEditText
        android:id="@+id/editAlcool"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="R$0,00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/editGasolina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainTitle"
        app:locale="pt_BR"
        app:showSymbol="true" />

    <faranjit.currency.edittext.CurrencyEditText
        android:id="@+id/editGasolina"
        android:layout_width="120dp"
        android:layout_height="54dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="R$0,00"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editAlcool"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainTitle"
        app:locale="pt_BR"
        app:showSymbol="true" />

    <TextView
        android:id="@+id/textViewAlcool"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="64dp"
        android:text="@string/text_alcool"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewGasolina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAlcool" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:layout_margin="20dp"
        android:layout_marginEnd="256dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/buttonCalc"
        android:elevation="0dp"
        android:text="@string/btn_calcular"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlcool" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/btnCalc"
        card_view:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/heading_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headCard"
                android:orientation="vertical"
                android:padding="36dp">


                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/btnCalc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/valueSeekBar"
                        style="@style/customSeekBar"
                        android:layout_width="184dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:max="60" />

                    <TextView
                        android:id="@+id/valueChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textAlignment="viewEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="R$0,00" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20sp">

                <TextView
                    android:id="@+id/changeAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="viewStart"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/changeGas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAlignment="viewStart"
                    android:textSize="24sp"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>